<p id="notice"><%= notice %></p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Password:</b>
  <%= @user.password %>
</p>

<p>
  <b>Profile:</b>
  <ul>
    <li><%= "Name : #{@user.profile.name}"%></li>
    <li><%= "Surname : #{@user.profile.surname}"%></li>
  </ul>
</p>

<p>
  <b>Friends:</b>
  <ul>
  <% @user.friends.each do |friend| %>
    <li> <%="#{friend.username}"%>
  <%end%>
  </ul>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
