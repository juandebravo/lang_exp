<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @profile.name %>
</p>

<p>
  <b>Surname:</b>
  <%= @profile.surname %>
</p>

<%if user_signed_in?%>
  <%if current_user.username.eql?(params[:user_id])%>
    <%= link_to 'Edit', edit_user_profile_path(current_user.username, @profile) %> |
  <%else%>
    <%= friend_link current_user, @profile.user%>
  <%end%>
  
<%end%>

<%= link_to 'Back', profiles_path %>
